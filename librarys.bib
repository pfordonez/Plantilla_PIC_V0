doi = {10.1093/ijlit/eav013},
file = {:C$\backslash$:/Users/JUAN RIVAS/Desktop/JUAN RIVAS/INVESTIGACION/PAPERS DE LA NUBE/SCOPUS CADENAS/CADENA 1/castro2015.pdf:pdf},
