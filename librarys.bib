issn = {19324537},
journal = {IEEE Transactions on Network and Service Management},
keywords = {Service Level Agreeements,decision-making,enterprise IT service availability},
number = {1},
pages = {58--70},
title = {{Experimental Evidence on Decision-Making in Availability Service Level Agreements}},
volume = {13},
year = {2016}
